{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/shared/**/*", "src/lib/**/*"],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "types": ["electron-vite/node"],
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
